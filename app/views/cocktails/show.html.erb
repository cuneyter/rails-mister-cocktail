<%# Start of Banner %>
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= cl_image_path @cocktail.photo.key, height: 400, width: 800, crop: 'fill' %>);">
  <div class="container text-center">
    <h1><%= @cocktail.name %></h1>
  </div>
</div>
<%# End of Banner %>

<%# Start of cocktail show %>
<div class="container cocktail-show">
    <div class="row">
        <div class="col-sm-12 mt-5">
            <div class="card card-block w-75 mx-auto">
            <div class="card-body">

                <div class="row ">

                  <%# Create Cocktail Ingredients %>
                  <div class="col-sm-4">
                  <h3 class="mb-3">Add an Ingredient</h3>
                  <%# <%= link_to 'Add Ingredient',  new_cocktail_dose_path(@cocktail), class: "btn btn-danger" %>
                    <%= simple_form_for [ @cocktail, @dose ] do |f| %>
                      <%= f.input :description %>
                      <%= f.association :ingredient  %>
                      <%= f.submit "Submit", class: "btn btn-danger" %>
                    <% end %>
                  </div>

                  <%# Display Cocktail Ingredients %>
                  <div class="col-sm-8 text-center">
                  <h3 class="mb-3">Ingredients</h3>
                    <ul class="list-group">
                    <% @cocktail.doses.each do |dose| %>
                      <li class="list-group-item"><%= dose.ingredient.name %> - <%= dose.description %>
                        <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure you want to delete #{dose.description}?" } do %>
                            <i class="bi bi-trash" aria-hidden="true"></i>
                        <% end %>
                      </li>
                    <% end %>
                    </ul>
                  </div>
                </div>

                <%# Add A review card %>
                <div class="row my-5">
                  <div class="col-sm-12">
                  <h3 class="mb-3">Add a review for this cocktail</h3>
                  <%= simple_form_for [ @cocktail, @review ] do |f| %>
                    <%= f.input :content %>
                    <%= f.input :rating, collection: (1..5)%>
                    <%= f.submit "Submit review", class: "btn btn-danger" %>
                  <% end %>
                  </div>
                </div>

                <%# Reviews %>
                <div class="row my-5">
                  <div class="col-sm-12">
                  <h3 class="mb-3">Reviews</h3>
                  <ul class="list-group">
                    <% @cocktail.reviews.each do |review| %>
                      <li class="list-group-item"><strong>Rating:</strong>  <%= review.rating %> - <strong>Comments:</strong> <%= review.content %></li>
                    <% end %>
                  </ul>
                  </div>
                </div>
              </div>
            </div>
        </div>
    </div>
</div>
<%# End of cocktail show %>

