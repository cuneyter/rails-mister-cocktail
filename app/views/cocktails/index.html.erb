<%# Start of Navbar %>
<nav class="navbar fixed-top navbar-expand-lg navbar-dark p-md-3">
  <div class="container">
    <a class="navbar-brand" href="#">The Cocktail House</a>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNav"
      aria-controls="navbarNav"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <div class="mx-auto"></div>
      <ul class="navbar-nav">
        <li class="nav-item me-3">
          <form action="#" class="navbar-form" role="search">
          <div class="input-group">
              <input type="text" class="form-control" placeholder="Search Cocktails" name="search" id="search">
              <button class="btn btn-light" type="submit"><i class="bi bi-search"></i></button>
          </div>
          </form>
        </li>
        <li class="nav-item">
          <a class="nav-link text-white" href="/cocktails/new">Create your Cocktail!</a>
